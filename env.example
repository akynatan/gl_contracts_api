# ========================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# ========================================
DB_HOST=localhost
DB_PORT=22432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_DATABASE=clicksign_hubsoft

# ========================================
# CONFIGURAÇÕES DA APLICAÇÃO
# ========================================
NODE_ENV=production
PORT=9999
JWT_SECRET=sua_chave_jwt_super_secreta_aqui

# ========================================
# CONFIGURAÇÕES DO HUBSOFT
# ========================================
HUBSOFT_HOST=https://api.hubsoft.com.br
HUBSOFT_GRANT_TYPE=password
HUBSOFT_CLIENT_ID=seu_client_id_aqui
HUBSOFT_CLIENT_SECRET=seu_client_secret_aqui
HUBSOFT_USERNAME=seu_username_aqui
HUBSOFT_PASSWORD=sua_senha_aqui

# ========================================
# CONFIGURAÇÕES DO CLICKSIGN
# ========================================
CLICKSIGN_HOST=https://sandbox.clicksign.com
CLICKSIGN_TOKEN=seu_token_aqui

# ========================================
# CONFIGURAÇÕES DE EMAIL (OPCIONAL)
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu_email@gmail.com
SMTP_PASS=sua_senha_de_app

# ========================================
# CONFIGURAÇÕES DE LOG (OPCIONAL)
# ========================================
LOG_LEVEL=info
LOG_FILE=logs/app.log

# ========================================
# CONFIGURAÇÕES DE SEGURANÇA (OPCIONAL)
# ========================================
CORS_ORIGIN=*
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# ========================================
# CONFIGURAÇÕES DE CRON (OPCIONAL)
# ========================================
CRON_ENABLED=true
BACKUP_RETENTION_DAYS=7
MONITORING_INTERVAL_MINUTES=15
